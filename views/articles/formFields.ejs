<div class="form-group">
  <label for="title">Title</label>
  <input type="text" name="title" value="<%= article.title %>" id="title" class="form-control" required>
</div>

<div class="form-group">
  <label for="description">Description</label>
  <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>

<div class="form-group">
  <label for="markdown">Markdown</label>
  <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdoen %></textarea>
</div>

<br>
<a href="/" class="btn btn-secondary">Cancel</a>
<input type="submit" class="btn btn-primary" value="Save">